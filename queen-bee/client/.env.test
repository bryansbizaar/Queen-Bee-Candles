# Test environment variables for Queen Bee Candles client testing

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=5000

# Stripe Configuration (Test Keys)
VITE_STRIPE_PUBLIC_KEY=pk_test_mock_key_for_testing

# Feature Flags for Testing
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_LOGGING=false
VITE_ENABLE_DEBUG=true

# Test Database Configuration
VITE_TEST_MODE=true

# Image Configuration
VITE_IMAGE_BASE_URL=http://localhost:3001/images
VITE_IMAGE_OPTIMIZATION=false

# Cache Configuration
VITE_CACHE_ENABLED=false
VITE_CACHE_TTL=0

# Mock Services
VITE_MOCK_STRIPE=true
VITE_MOCK_API=true
VITE_MOCK_IMAGES=true
